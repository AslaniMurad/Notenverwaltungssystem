<header class="site-header">
  <div class="header-brand">
    <!-- HTL Waidhofen Logo: prefer uploaded PNG, fallback to inline SVG -->
    <a href="https://www.htl-waidhofen.at" target="_blank" rel="noopener noreferrer" class="htl-logo" title="HTL Waidhofen">
      <img src="/images/htl-waidhofen.png" alt="HTL Waidhofen" class="htl-logo-img" onerror="this.style.display='none';document.getElementById('htl-fallback').style.display='inline-block'">
      <svg id="htl-fallback" style="display:none" width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <rect x="1" y="1" width="34" height="34" fill="#2563eb" rx="6" stroke="#2563eb" stroke-width="2"/>
        <text x="18" y="24" font-size="18" font-weight="bold" fill="white" text-anchor="middle" font-family="Arial">H</text>
      </svg>
    </a>
    <div>
      <div class="brand-meta">HTL Waidhofen â€¢ Notenverwaltung</div>
      <div class="brand-title"><%= headerTitle || 'School Panel' %></div>
    </div>
  </div>
  <% if (headerActions && headerActions.length) { %>
    <nav class="header-actions" aria-label="Hauptaktionen">
      <% headerActions.forEach(function(action){ %>
        <a class="btn btn-secondary" href="<%= action.href %>"><%= action.label %></a>
      <% }) %>
    </nav>
  <% } %>
</header>
